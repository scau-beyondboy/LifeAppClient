<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/pick_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pick_name"
                android:singleLine="true"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@android:color/black"
                tools:text="联系名字:徐国立"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/pick_name"
                android:id="@+id/pick_contact"
                android:singleLine="true"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@android:color/black"
                tools:text="联系电话:18813752548"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/pick_desc"
            android:layout_below="@id/pick_header"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="15sp"
            tools:text="fjfjaslffafgfsdgfda"
            android:minLines="2"
            android:ellipsize="end"
            android:maxLines="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
