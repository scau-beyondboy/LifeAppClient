<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="textview_style1">
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:padding">10dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">50dp</item>
  </style>

  <style name="text_style2">
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_marginTop">50dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="text_style3">
    <item name="android:layout_toRightOf">@id/header_image</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:textSize">15sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="text_style4"
    parent="text_style8">
    <!--<item name="android:layout_width">wrap_content</item>-->
    <!--<item name="android:layout_height">wrap_content</item>-->
    <item name="android:layout_centerInParent">true</item>
    <item name="android:textSize">25sp</item>
  </style>

  <style name="textv_style5">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_marginTop">40dp</item>
    <item name="android:background">@color/white</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="text_style6">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_marginRight">15dp</item>
    <item name="android:padding">10dp</item>
  </style>

  <style name="text_style7">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">35dp</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="text_style8">
    <item name="android:textSize">17sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="text_style9">
    <item name="android:layout_width">300dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:drawablePadding">15dp</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:singleLine">true</item>
    <item name="android:gravity">center_vertical</item>
  </style>
</resources>